{{#with product}}
<div class="row d-flex justify-content-center align-items-center container-product">
    <div class="col-9">
        <div class="d-flex justify-content-center align-items-center my-4">
            <div class="ratio ratio-16x9">
                <img src="{{images.[0]}}" class="img-fluid object-fit-contain my-2" alt="{{title}}">
            </div>
            <div class="d-flex flex-column justify-content-around ms-5">
                <h3 class="">{{title}}</h3>
                <div class="d-flex">
                    <span class="badge rounded-pill text-bg-secondary tag-product">{{brand}}</span>  
                    <span class="badge rounded-pill text-bg-secondary tag-product">{{category}}</span>  
                </div>
                <span><i class="bi bi-star-fill"></i> {{rating}}</span>
                <p>{{description}}</p>
            </div>
        </div>
        <div class="d-flex flex-column align-items-center my-2">
            <h4 class="gallery">Gallery</h4>
            <div class="d-flex flex-row flex-wrap justify-content-center mb-3">
                {{#each images}}
                    <img src="{{this}}" class="img-thumbnail object-fit-contain w-25 m-2" alt="{{title}}">
                {{/each}}
            </div>
        </div>
    </div>
</div>
{{/with}}